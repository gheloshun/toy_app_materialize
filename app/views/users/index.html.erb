<% provide(:title, "Show Users") %>
<p id="notice"><%= notice %></p>

<h3>Users</h3>

<%= will_paginate %>

<table class="mdl-data-table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= image_tag(user.display_image) if user.image.attached? %>
        <td><%= link_to 'Show', user, class: "waves-effect waves-light btn light-blue" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "waves-effect waves-light btn green" if current_user.admin? %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn red" if current_user.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to 'New User', new_user_path %>
