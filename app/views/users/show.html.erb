<p id="notice"><%= notice %></p>

<h3>User Information</h3>
<hr/>
<div class="row">
  <div class="col l6">
    <p>
      <strong>First name:</strong>
      <%= @user.first_name %>
    </p>
    <p>
      <strong>Last name:</strong>
      <%= @user.last_name %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
  </div>
  <div class="col l6">
    <p>
      <%= image_tag(@user.display_avatar) if @user.image.attached? %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user), class: "waves-effect waves-light btn-small green" if @user.id == session[:user_id] %>
<%= link_to 'Back', users_path, class: "waves-effect waves-light btn-small indigo accent-1" %>
