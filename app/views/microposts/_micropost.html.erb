<li id="micropost-<%= micropost.id %>">
<div class="row">
  <% if current_user.image.attached? %>
    <%= link_to image_tag(current_user.display_image, class: "user-avatar", size: 50), micropost.user %>
  <% else %>
    <%= link_to image_tag("blank_image", class: "user-avatar", size: 50), micropost.user %>
  <% end %>
  <div class="row">
    <span class="user"><%= link_to micropost.user.first_name + " " + micropost.user.last_name, micropost.user %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </div>

</div>
  <div class="row mt-5">
    <div class="card card-border z-depth-2">
      <% if micropost.images.attached? %>
        <div class="card-image">
          <div class="carousel">
            <% (2...micropost.images.count).each do |image| %>
            <div class="carousel-item">
              <div class="row">
                <%= image_tag micropost.display_micropost_image(image) %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <div class="card-content">
          <%= micropost.content %>
        </div>
      <% else %>
      <div class="card-content">
        <%= micropost.content %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <span class="right-align">
      <% if current_user?(micropost.user) %>
        <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: "btn-small waves-effect waves-light red" %>
      <% end %>
    </span>
  </div>
</li>

<script type="text/javascript">
  $(document).ready(function(){
    $('.carousel').carousel();
  });
</script>
